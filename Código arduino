void setup()
{
  // Tareas de configuración 
  Serial.begin(9600);
}

void loop()
{
    
  if (Serial.available() > 0)  // Si hay mensajes procedentes del PC  
    procesar_mensaje();
	
   // Resto de acciones 
  
}


void procesar_mensaje(void)
{
  int numero;
  String cadena = Serial.readStringUntil('\n'); // Lee mensaje
  String valor = Serial.readStringUntil('\n');  // Lee valor
  numero = valor.toInt();  // Transforma valor a entero
  
  if (cadena.equals("ENCENDER_LED")) // Entre las comillas se pone el texto del mensaje que se espera  
    {

       digitalWrite (numero,HIGH);
       numero=numero*2;
       Serial.println ("LED_ENCENDIDO ");
       Serial.println (numero);
       
      
        // Acciones asociadas a ese mensaje
		// Si se desea responer a este mensaje 
		// Serial.println("Respuesta_acabada_en_un_espacio_en_blanco ");
		// Serial.println(valor_entero);
    }
	else
	 if (cadena.equals("PARPADEO")) // Y así sucesivamente con todos los posibles mensajes
	  {
    //COPIAR ESTA SECUENCIA PARA TODOS LOS LED, Y EN DONDE PONE "NUMERO" HAY QUE ESCRIBIR EL PUERTO EN EL QUE ESTA PUESTO EL LED EN EL ARDUINO
     digitalWrite(numero, HIGH); // enciende el LED.
     delay(500); // retardo de 500 milisegundos
     digitalWrite(numero, LOW); // apaga el LED.
     delay(500); 

     Serial.println ("LED_PARPADEANDO");
     
     
	  }
}
